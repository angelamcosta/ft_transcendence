{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "public",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "ts/**/*.ts"
  ]
}